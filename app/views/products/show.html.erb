<p id="notice"><%= notice %></p>
<p><%= image_tag @product.image.url(:medium), size: "210x150" %></p>
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<%= link_to "Add to cart", cart_add_path( id:  @product.id ), remote: true, class: "btn btn-primary" %>
<% if admin_signed_in? %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<% end %>

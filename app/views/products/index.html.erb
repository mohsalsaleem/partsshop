<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% @products.each_with_index do |product, index| %>
        <% if (index+1)%3 == 0 %>
          <div class="row">
        <% end %>
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="card">
              <div class="card-block">
                <%= image_tag product.image.url(:medium), class: "card-img-top img-responsive", size: "210x150" %>
                <h4 class="card-title"><%= product.name %></h4>
                <p class="card-text"><%= product.description %></p>
                <%= link_to "Add to cart", cart_add_path( id:  product.id ), remote: true, class: "btn btn-primary" %>
                <%= link_to "Show", product, class: "btn btn-success" %><br/><br/>
                <% if admin_signed_in? %>
                  <%= link_to "Edit", edit_product_path(product), class: "btn btn-info" %>
                  <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                <% end %>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><p> Price: <%= product.price %></p></li>
              </ul>
            </div>
          </div>
        <% if (index+1) % 3 == 0 %>  
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<br>
<% if admin_signed_in? %>
<%= link_to 'New Product', new_product_path %>
<% end %>
